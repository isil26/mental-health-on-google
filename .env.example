# environment variables for mental health trends project

# google trends configuration
PYTRENDS_HL=en-US
PYTRENDS_TZ=360

# data collection settings
TIMEFRAME=today 5-y
BATCH_SIZE=5
COLLECTION_DELAY_SECONDS=3

# model training
PROPHET_SEASONALITY_MODE=multiplicative
PROPHET_CHANGEPOINT_PRIOR=0.05
ARIMA_AUTO_ORDER=True
LSTM_EPOCHS=50
LSTM_BATCH_SIZE=32

# forecasting
DEFAULT_FORECAST_PERIODS=52
CONFIDENCE_INTERVAL=0.95

# anomaly detection
ZSCORE_THRESHOLD=2.5
MODIFIED_ZSCORE_THRESHOLD=3.5
ISOLATION_FOREST_CONTAMINATION=0.05
ROLLING_WINDOW=12

# visualization
CHART_THEME=plotly_white
CHART_HEIGHT=500
CHART_WIDTH=1200

# streamlit
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# optional: tensorflow/lstm
USE_LSTM=True
TENSORFLOW_LOG_LEVEL=ERROR

# data storage
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=models
NOTEBOOKS_DIR=notebooks

# logging
LOG_LEVEL=INFO
LOG_FILE=mental_health_trends.log
